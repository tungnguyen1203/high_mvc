<%= form_with model: @form, url: animals_path, scope: 'animal' do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
    <p ><%= @form.errors.full_messages_for(:name).join(', ') %></p>
  </div>
  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age, class:"form-control" %>
    <p ><%= @form.errors.full_messages_for(:age).join(', ') %></p>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
